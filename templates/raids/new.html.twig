{% extends 'base.html.twig' %}

{% block title %}Créer un raid{% endblock %}

{% block body %}
    <div class="container py-4">
        <h1>Créer un raid</h1>

        {{ form_start(form) }}
        <div class="row g-3">
            <div class="col-12">
                {{ form_row(form.title) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.startsAt) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.endsAt) }}
            </div>
            <div class="col-12">
                {{ form_row(form.description) }}
            </div>
        </div>

        <div class="mt-3 d-flex gap-2">
            <button class="btn btn-danger">Créer</button>
            <a class="btn btn-outline-secondary" href="{{ path('raids_calendar') }}">Annuler</a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
