{% extends 'base.html.twig' %}

{% block title %}Connexion — TheWinners{% endblock %}

{% block body %}
    <div class="container py-5">

        <div class="row justify-content-center">
            <div class="col-md-6">

                <div class="card bg-dark border-danger shadow-lg">
                    <div class="card-header bg-black border-bottom border-danger text-center py-3">
                        <h2 class="text-danger fw-bold mb-0">
                            Connexion
                        </h2>
                        <small class="text-secondary">Accédez au sanctuaire de la Horde !</small>
                    </div>

                    <div class="card-body p-4">

                        {% if error %}
                            <div class="alert alert-danger text-center fw-bold">
                                ⚠️ Identifiants incorrects
                            </div>
                        {% endif %}

                        <form method="post" action="{{ path('app_login') }}">

                            <div class="mb-3">
                                <label for="inputEmail" class="form-label fw-bold text-light">
                                    Adresse e-mail
                                </label>
                                <input
                                    type="email"
                                    name="_username"
                                    id="inputEmail"
                                    class="form-control bg-black text-light border-danger"
                                    value="{{ last_username }}"
                                    autocomplete="email"
                                    required
                                >
                            </div>

                            <div class="mb-3">
                                <label for="inputPassword" class="form-label fw-bold text-light">
                                    Mot de passe
                                </label>
                                <input
                                    type="password"
                                    name="_password"
                                    id="inputPassword"
                                    class="form-control bg-black text-light border-danger"
                                    autocomplete="current-password"
                                    required
                                >
                            </div>

                            <button class="btn btn-danger w-100 fw-bold mt-2" type="submit">
                                Se connecter
                            </button>
                        </form>

                        <div class="text-center mt-3">
                            <a href="{{ path('app_register') }}" class="text-danger fw-bold">
                                Pas encore inscrit ? Rejoindre la Horde →
                            </a>
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>
{% endblock %}
