{# templates/partials/navbar.html.twig #}
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-black bg-opacity-75 border-bottom border-danger">
        <div class="container">

            {# Brand (logo) #}
            <a class="navbar-brand fw-bold text-danger d-flex align-items-center gap-2"
               href="{{ path('app_home') }}">
                <img
                    src="{{ asset('/images/icons/icons8-world-of-warcraft-48.png') }}"
                    alt="TheWinners"
                    width="40"
                    height="40"
                >
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar"
                    aria-expanded="false"
                    aria-label="Basculer la navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">

                {# Liens à gauche #}
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('raids_calendar') }}">Raids</a>
                    </li>
                </ul>

                {# Liens à droite #}
                <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-3 mb-2 mb-lg-0">

                    {% if app.user %}

                        {# Postuler #}
                        <li class="nav-item">
                            {% if is_granted('ROLE_USER') and not is_granted('ROLE_RECRUE') and not is_granted('ROLE_MEMBER') and not is_granted('ROLE_VETERAN') and not is_granted('ROLE_OFFICER') %}
                                <a class="nav-link" href="{{ path('guild_apply') }}">Postuler</a>
                            {% endif %}
                        </li>

                        {# Messages + badge non lus #}
                        <li class="nav-item position-relative">
                            <a class="nav-link" href="{{ path('app_messages') }}">
                                Messages

                                {% set unread = unread_messages_count(app.user) %}
                                {% if unread > 0 %}
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        {{ unread }}
                                    </span>
                                {% endif %}
                            </a>
                        </li>

                        {# Admin (si ROLE_ADMIN) #}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold"
                                   href="{{ path('admin_dashboard') }}">
                                    Admin
                                </a>
                            </li>
                        {% endif %}

                        {# Avatar + pseudo (simple affichage) #}
                        <li class="nav-item d-flex align-items-center gap-2">

                            {% if app.user.avatar %}
                                <img
                                    src="{{ asset(app.user.avatar) }}"
                                    alt="Avatar"
                                    width="28"
                                    height="28"
                                    class="rounded-circle"
                                    style="object-fit:cover;border:1px solid rgba(220,53,69,.7);"
                                >
                            {% else %}
                                <span
                                    class="rounded-circle d-inline-flex align-items-center justify-content-center"
                                    style="width:28px;height:28px;
                                           background:rgba(220,53,69,.2);
                                           border:1px solid rgba(220,53,69,.7);">
                                    <small class="fw-bold text-danger">
                                        {{ app.user.pseudo|first|upper }}
                                    </small>
                                </span>
                            {% endif %}

                            <span class="text-light">{{ app.user.pseudo }}</span>
                        </li>

                        {# Mon profil #}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_profile') }}">
                                Mon profil
                            </a>
                        </li>

                        {# Déconnexion #}
                        <li class="nav-item">
                            <a class="btn btn-sm btn-outline-danger"
                               href="{{ path('app_logout') }}">
                                Déconnexion
                            </a>
                        </li>

                    {% else %}

                        {# Visiteur #}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-sm btn-danger ms-lg-2"
                               href="{{ path('app_register') }}">
                                Rejoindre TheWinners
                            </a>
                        </li>

                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    {# Flash messages #}
    <div class="container mt-3">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="alert"
                            aria-label="Fermer"></button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
</header>
