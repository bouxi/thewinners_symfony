{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid py-3">
        <div class="row g-3">

            <aside class="col-12 col-lg-3 col-xl-2">
                <div class="card bg-dark text-white">
                    <div class="card-body">
                        <div class="fw-bold mb-3">Admin</div>

                        <div class="list-group list-group-flush">
                            <a class="list-group-item list-group-item-action bg-dark text-white"
                               href="{{ path('admin_dashboard') }}">Dashboard</a>

                            <a class="list-group-item list-group-item-action bg-dark text-white"
                               href="{{ path('admin_users_index') }}">Utilisateurs</a>

                            <a class="list-group-item list-group-item-action bg-dark text-white"
                               href="{{ path('admin_messages_conversations') }}">
                                Conversations
                            </a>

                        </div>
                    </div>
                </div>
            </aside>

            <main class="col-12 col-lg-9 col-xl-10">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div>
                        <h1 class="h3 mb-0">{% block admin_title %}Administration{% endblock %}</h1>
                        <div class="text-muted small">{% block admin_subtitle %}{% endblock %}</div>
                    </div>

                    <div class="d-flex gap-2">
                        <a class="btn btn-outline-secondary" href="{{ path('app_home') }}">Retour site</a>
                        <a class="btn btn-danger" href="{{ path('app_logout') }}">DÃ©connexion</a>
                    </div>
                </div>

                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} mb-2">{{ message }}</div>
                    {% endfor %}
                {% endfor %}

                {% block admin_content %}{% endblock %}
            </main>
        </div>
    </div>
{% endblock %}
